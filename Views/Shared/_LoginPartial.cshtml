@using Microsoft.AspNetCore.Identity
@using PharmacyInventorySystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="auth-buttons">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <div class="auth-button-group">
            <a class="auth-button account-settings" asp-area="Identity" asp-page="/Account/Manage/Index" title="Account Settings">
                <i class="bi bi-gear-fill"></i>
                <span>Account Settings</span>
            </a>
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="auth-button logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="auth-button-group">
            <a class="auth-button register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i>
                <span>Register</span>
            </a>
            <a class="auth-button login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i>
                <span>Login</span>
            </a>
        </div>
    }
</div>
