@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Pharmacist Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <div class="d-flex align-items-center welcome-header">
                        <div class="icon-shape bg-gradient-primary text-white">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <div>
                            <h2 class="mb-1 user-name">Welcome, @ViewBag.FullName!</h2>
                            <p class="text-muted mb-0">Here's what's happening in your pharmacy today.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4 g-4">
        <div class="col-12">
            <h3 class="mb-3">Quick Actions</h3>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow rounded-4 h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">
                    <div class="icon-shape bg-gradient-primary text-white mb-3">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <h5 class="card-title">New Sale Invoice</h5>
                    <p class="card-text text-muted">Process a new sale transaction</p>
                    <a asp-area="Pharmacist" asp-controller="Sales" asp-action="Create" class="btn btn-success w-100 mt-auto">
                        <i class="bi bi-plus-circle me-2"></i>New Sale
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow rounded-4 h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">
                    <div class="icon-shape bg-gradient-primary text-white mb-3">
                        <i class="bi bi-arrow-repeat"></i>
                    </div>
                    <h5 class="card-title">Create a Return</h5>
                    <p class="card-text text-muted">Process product returns</p>
                    <a asp-area="Pharmacist" asp-controller="Returns" asp-action="Create" class="btn btn-success w-100 mt-auto">
                        <i class="bi bi-arrow-return-left me-2"></i>New Return
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow rounded-4 h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">
                    <div class="icon-shape bg-gradient-primary text-white mb-3">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h5 class="card-title">Create New Supplier Order</h5>
                    <p class="card-text text-muted">Place new supplier orders</p>
                    <a asp-area="Pharmacist" asp-controller="SupplierOrders" asp-action="Create" class="btn btn-success w-100 mt-auto">
                        <i class="bi bi-plus-circle me-2"></i>New Order
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow rounded-4 h-100">
                <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">
                    <div class="icon-shape bg-gradient-primary text-white mb-3">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="card-title">Available Suppliers</h5>
                    <p class="card-text text-muted">View and contact suppliers</p>
                    <a asp-area="Pharmacist" asp-controller="SupplierContact" asp-action="Index" class="btn btn-success w-100 mt-auto">
                        <i class="bi bi-envelope me-2"></i>Contact Suppliers
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stock Alerts -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Stock Alerts
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-0">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-circle me-3 fs-4"></i>
                            <div>
                                <h5 class="alert-heading mb-1">Low Stock Items</h5>
                                <p class="mb-0">Some items are running low on stock. Please check the inventory and place orders if necessary.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .icon-shape {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .icon-shape i {
            font-size: 1.5rem;
        }

        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .btn {
            transition: all 0.2s ease-in-out;
        }

        .btn:hover {
            transform: translateY(-2px);
        }
    </style>
}
