@model IEnumerable<PharmacyInventorySystem.Models.Supplier>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Available Suppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-gradient-primary text-white d-flex align-items-center gap-2">
            <i class="bi bi-people"></i>
            <h2 class="mb-0">Available Suppliers</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle rounded-4 overflow-hidden">
                    <thead class="table-dark">
                        <tr>
                            <th>Supplier Name</th>
                            <th>Contact Email</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.SupplierName</td>
                                <td>@supplier.ContactEmail</td>
                                <td>@supplier.PhoneNumber</td>
                                <td>
                                    <a href="mailto:@supplier.ContactEmail" class="btn btn-success btn-sm rounded-pill">
                                        <i class="bi bi-envelope"></i> Email
                                    </a>
                                    <a href="tel:@supplier.PhoneNumber" class="btn btn-outline-success btn-sm rounded-pill ms-2">
                                        <i class="bi bi-telephone"></i> Call
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
