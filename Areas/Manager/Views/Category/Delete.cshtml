@model PharmacyInventorySystem.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-danger">
        <div class="card-header category-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Delete Category</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this category?</h5>
            <dl class="row">
                <dt class="col-sm-3">Category Name</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CategoryID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
