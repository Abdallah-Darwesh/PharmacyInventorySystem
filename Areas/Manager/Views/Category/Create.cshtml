@model PharmacyInventorySystem.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section-header sales-reports-header">
        <i class="bi bi-tags me-2"></i>
        <span>Create Category</span>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            @if (ViewBag.Errors != null)
            {
                <ul class="text-danger">
                    @foreach (var err in (List<string>)ViewBag.Errors)
                    {
                        <li>@err</li>
                    }
                </ul>
            }
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                    <button type="submit" class="btn btn-success rounded-pill px-4 py-2 d-inline-flex align-items-center">
                        <i class="bi bi-plus-circle me-2"></i> Create Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
