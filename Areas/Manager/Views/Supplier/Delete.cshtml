@model PharmacyInventorySystem.Models.Supplier
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section-header sales-reports-header">
        <i class="bi bi-truck me-2"></i>
        <span>Delete Supplier</span>
    </div>
    <div class="card border-danger shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Are you sure you want to delete this supplier?</h5>

            <dl class="row mb-0">
                <dt class="col-sm-3">Supplier Name</dt>
                <dd class="col-sm-9">@Model.SupplierName</dd>

                <dt class="col-sm-3">Contact Email</dt>
                <dd class="col-sm-9">@Model.ContactEmail</dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="SupplierID" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
            <input type="submit" value="Delete" class="btn btn-danger rounded-pill px-4" />
        </div>
    </form>
</div>
